{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "env.d.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./build",
    "./out",
    "./coverage",
    "./lib"
  ]
}
